PROGRAM N1GABRIELJESUS24;
//GABRIEL JESUS PERES

//24) FUP que leia 2 números inteiros X e Y. Após, calcule e mostre o resultado de X elevado a Y, sem usar a operação ** OU logaritmo.Usar multiplicação.

var x,y,res,cont:integer;

Begin
  
  cont:=0;
  res:=1;
  
  write('Digite a base: ');
  read(x);
  write('Digite o expoente: ');
  read(y);
  
  if (y<0) then
  begin
    y:=abs(y);
    while (cont<y) do
    begin
      res:=res*x;
      cont:=cont+1;
    end;
    write('O resultado é: 1/', res); // Professor, aqui eu tive uma grande dúvida e acabei achando essa solução de "jeitinho brasileiro"
  end
  else
  begin
    while (cont<y) do
    begin
      res:=res*x;
      cont:=cont+1;
    end;
    write('O resultado da potência é: ', res);
  end;
  
End.
